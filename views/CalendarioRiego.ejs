<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro de Riegos</title>
  <!-- Enlaza Bootstrap desde un CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <style>
    body {
      background-image: url('/cuaderno.jpg'); 
      background-color: #f4f6f9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      max-width: 1200px;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 30px;
      font-weight:bold;
      color: #0000009d; 
    }

    .table {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      background-color: #ffffff;
    }

    .thead-dark {
      background-color: #28a745; /* Verde */
      color: white;
    }

    th, td {
      vertical-align: middle;
      text-align: center;
    }

    .table th, .table td {
      padding: 12px;
    }

    .btn-custom {
      background-color: #28a745; /* Verde */
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
    }

    .btn-custom:hover {
      background-color: #218837e7; /* Verde más oscuro */
    }

    /* Media query para la responsividad */
    @media (max-width: 768px) {
      .container {
        padding: 10px;
      }

      h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>

<body>
  <div class="container mt-4">
    <h1 class="text-center">Registro de Riegos de Orquídeas</h1>
    
    <!-- Botón para agregar nuevo registro (opcional) -->
    <div class="d-flex justify-content-end mb-4">
      <button class="btn btn-custom">
        <i class="material-icons">add_circle</i> Nuevo Registro
      </button>
    </div>

    <!-- Tabla de riegos -->
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID Riego</th>
          <th>ID Orquídea</th>
          <th>Fecha de Riego</th>
          <th>Hora de Riego</th>
          <th>Fecha de Creación</th>
        </tr>
      </thead>
      <tbody>
        <!-- Itera sobre los datos y los muestra -->
        <% datosRiego.forEach(function(riego) { %>
          <tr>
            <td><%= riego.id_riego %></td>
            <td><%= riego.id_orquidea %></td>
            <td><%= riego.fecha_riego %></td>
            <td><%= riego.hora_riego %></td>
            <td><%= riego.creado_en %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Scripts de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
