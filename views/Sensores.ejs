<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Sensores</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Lista de Sensores de Orquídeas</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID Sensor</th>
                <th>ID Orquídea</th>
                <th>Tipo Sensor</th>
                <th>MAC Address</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            <% sensores.forEach(sensor => { %>
                <tr>
                    <td><%= sensor.id_sensor %></td>
                    <td><%= sensor.id_orquidea %></td>
                    <td><%= sensor.tipo_sensor %></td>
                    <td><%= sensor.mac_address %></td>
                    <td><%= sensor.estado %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
